<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".src.splash.SplashActivity"
    android:background="@color/mainColor">

    <TextView
        android:id="@+id/splash_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="우리 아이 안심 페이"
        android:textSize="32sp"
        android:fontFamily="@font/nanum_bold"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="130dp"/>

    <ImageView
        android:id="@+id/child_splash_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/parent_logo"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toBottomOf="@id/splash_tv_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toBottomOf="@id/child_splash_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="우리 아이의 안전한"
            android:textSize="32sp"
            android:textColor="@color/white"
            android:fontFamily="@font/nanum_bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="첫 금융 서비스"
            android:textSize="32sp"
            android:textColor="@color/white"
            android:fontFamily="@font/nanum_bold"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>