<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/frameSize">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/frameSize"
        android:layout_marginLeft="@dimen/pageMarginAndOffset"
        android:layout_marginRight="@dimen/pageMarginAndOffset"
        android:background="@drawable/bg_child_info"
        android:orientation="vertical"
        android:padding="30dp">

        <TextView
            android:id="@+id/info3_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanum_bold"
            android:text="안심 챌린지 설정"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/info3_sub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/nanum"
            android:text="*선택입력사항"
            android:textSize="10sp"
            app:layout_constraintStart_toStartOf="@id/info3_title"
            app:layout_constraintTop_toBottomOf="@id/info3_title" />

        <TextView
            android:id="@+id/info3_inputTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/nanum"
            android:text="최대 4개 입력 가능 (주단위)"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/info3_sub" />

        <EditText
            android:id="@+id/info3_mission1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="일주일마다 15,000원 저축하기"
            android:textSize="16sp"
            android:ellipsize="end"
            android:inputType="text"
            android:maxLines="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/info3_inputTitle" />

        <EditText
            android:id="@+id/info3_mission2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="게임에 10,000원 이하로 사용하기"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:inputType="text"
            android:maxLines="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/info3_mission1" />

        <EditText
            android:id="@+id/info3_mission3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:text="군것질 30,000원 이하로 사용하기"
            android:ellipsize="end"
            android:inputType="text"
            android:maxLines="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/info3_mission2" />

        <EditText
            android:id="@+id/info3_mission4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="문구점에서 준비물 사오기"
            android:textSize="16sp"
            android:ellipsize="end"
            android:inputType="text"
            android:maxLines="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/info3_mission3" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>